<%- include('./partials/header')%>
  <%- include('./partials/homeNavbar')%>

    <body>
      <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-6 rootH1"></h1>
          <h3 class="dataDia"></h3>
          <p class="lead text-danger">Sistema de estoque em fase teste</p>
        </div>
      </div>
      <div class="container">
        <div class="tableLocal">
          <table class="table table-hover table table-bordered">
            <thead>
              <tr>
                <th scope="col">Colaborador</th>
                <th scope="col">Função</th>
                <th scope="col">Posto</th>
                <th scope="col">Setor</th>
                <th scope="col">Patrimônios</th>
              </tr>
            </thead>
            <tbody>
              <% employess.forEach( item=> {%>
                <tr>
                  <td>
                    <%= item.nome%>
                  </td>
                  <td>
                    <%= item.funcao%>
                  </td>
                  <td>
                    <%= item.posto%>
                  </td>
                  <td>
                    <%= item.setor%>
                  </td>
                  <td class="d-flex justify-content-center">
                    <a class="btn btn-secondary" href="/patrimonios/all/<%= item.id%>">Detalhes</a>
                  </td>
                </tr>
                <%})%>
            </tbody>
          </table>
        </div>
      </div>
    </body>

    <script>
      let rootP = document.querySelector('.rootH1');
      let dataDia = document.querySelector('.dataDia');
      let data = new Date();
      let hora = data.getHours()
      dataDia.innerText = data.toLocaleDateString('pt-BR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })

      function mostrarSaudacao(hora) {
        let saudacao;
        if (hora < 12) {
          saudacao = 'Bom dia, tenha um bom trabalho'
          return rootP.innerHTML = saudacao;
        } else if (hora >= 12 && hora <= 17) {
          saudacao = 'Boa Tarde, tenha um bom trabalho';
          return rootP.innerHTML = saudacao;
        } else if (hora >= 18 && hora <= 23) {
          saudacao = 'Boa Noite, tenha um bom trabalho';
          return rootP.innerHTML = saudacao;
        }
      }
      mostrarSaudacao(hora)
    </script>

