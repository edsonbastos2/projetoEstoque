<%- include('../../partials/header')%>

    <body>
        <%- include('../../partials/navbar')%>
            <div class="container">
                <div class="card mt-5">
                    <div class="card-header text-white bg-primary">
                        <h3>Edição de Funcionários</h3>
                    </div>
                    <div class="card-body">
                        <form action="/admin/employees/update" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Nome" name="nome"
                                    value="<%= employees.nome%>" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Função" name="funcao"
                                    value="<%= employees.funcao%>" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Posto" name="posto"
                                    value="<%= employees.posto%>" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Setor" name="setor"
                                    value="<%= employees.setor%>" required>
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="id" value="<%= employees.id %>">
                                <button class="btn btn-primary">Atualizar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </body>
    <%- include('../../partials/footer')%>