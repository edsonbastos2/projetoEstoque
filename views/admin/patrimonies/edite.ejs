<%- include('../../partials/header')%>

    <body>
        <%- include('../../partials/navbar')%>
            <div class="container">
                <div class="card mt-5">
                    <div class="card-header text-white bg-primary">
                        <h3>Atualização de Patrimonios</h3>
                    </div>
                    <div class="card-body">
                        <form action="/patrimonios/update" method="POST">
                            <input type="hidden" value="<%= patrimonios.id%>" name="id">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Nome" name="nome"
                                    value="<%= patrimonios.nome%>" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Modelo" name="modelo"
                                    value="<%= patrimonios.modelo%>" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Tombamento"
                                    value="<%= patrimonios.tombamento%>" name="tombamento" required>
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="Quantidade"
                                    value="<%= patrimonios.quantidade%>" name="quantidade" required>
                            </div>
                            <div class="form-group">
                                <textarea name="descricao" class="form-control"><%= patrimonios.descricao %></textarea>
                            </div>
                            <div class="form-goup">
                                <label for="">Funcionário</label>
                                <select name="employee" class="form-control">
                                    <% employees.forEach( employee=> {%>

                                        <% if(employee.id==patrimonios.employeeId){ %>
                                            <option value="<%= employee.id%>" selected>
                                                <%= employee.nome%>
                                            </option>
                                            <% } else{%>

                                                <%}%>

                                                    <%})%>
                                </select>
                            </div>

                            <div class="form-group mt-4">
                                <button class="btn btn-primary">Atualizar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </body>
    <%- include('../../partials/footer')%>