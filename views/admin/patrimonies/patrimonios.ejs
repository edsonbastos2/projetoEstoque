<%- include('../../partials/header')%>

    <body>
        <%- include('../../partials/navbar')%>
            <div class="container">
                <div class="card mt-5">
                    <div class="card-header text-white bg-primary">
                        <h3>Cadastro de Patrimonios</h3>
                    </div>
                    <div class="card-body">
                        <form action="/admin/patrimonios/save" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Nome" name="nome" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Modelo" name="modelo" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Tombamento" name="tombamento" required>
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="Quantidade" name="quantidade" required>
                            </div>

                            <div class="form-group">
                                <textarea name="descricao" class="form-control" placeholder="Descrição"></textarea>
                            </div>
                            <div class="form-goup">
                                <label for="">Funcionário</label>
                                <select name="employeeId" class="form-control">
                                    <% employees.forEach( employee => {%>
                                        <option value="<%= employee.id%>"><%= employee.nome%></option>
                                    <%})%>
                                </select>
                            </div>
                            <div class="form-group mt-4">
                                <button class="btn btn-primary">Cadastrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </body>
    <%- include('../../partials/footer')%>