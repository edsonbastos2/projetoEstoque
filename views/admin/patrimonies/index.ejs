<%- include('../../partials/header')%>

    <body>
        <%- include('../../partials/navbar')%>
            <div class="container mt-3">
                <h3>Patrimónios</h3>
                <a class="btn btn-success mb-3" href="/admin/patrimonios">Cadastro Patrimónios</a>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Modelo</th>
                            <th>Tombamento</th>
                            <th>Quantidade</th>
                            <th>Propeietário</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% patrimonios.forEach( item=> {%>
                            <tr>
                                <td>
                                    <%= item.id%>
                                </td>
                                <td>
                                    <%= item.nome%>
                                </td>
                                <td>
                                    <%= item.modelo%>
                                </td>
                                <td>
                                    <%= item.tombamento%>
                                </td>
                                <td>
                                    <%= item.quantidade%>
                                </td>
                                <% if(item.employee.nome){%>
                                    <td>
                                        <%= item.employee.nome %>
                                    </td>
                                    <%}%>

                                        <td class="d-flex justify-content-around">
                                            <a href="/admin/patrimonies/edit/<%= item.id %>"
                                                class="btn btn-warning">Editar</a>
                                            <form action="/patrimonies/delete" method="POST"
                                                onsubmit="confirmarDelete(event, this)">
                                                <input type="hidden" name="id" value="<%=item.id%>">
                                                <button class="btn btn-danger">Excluir</button>
                                            </form>
                                        </td>
                            </tr>
                            <%})%>
                    </tbody>
                </table>
            </div>
    </body>
    <%- include('../../partials/footer')%>
        <script>

            function confirmarDelete(event, form) {
                event.preventDefault();
                let decision = confirm('Você tem certeza');

                if (decision) {
                    form.submit();
                } else {
                    console.log('Você desistiu')
                }
            }
        </script>